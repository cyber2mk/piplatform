generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

enum UserRole {
  CLIENT
  AGENCY
  ADMIN
}

enum JobStatus {
  PENDING
  MATCHED
  DONE
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      UserRole @default(CLIENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  agency Agency?
  jobs   Job[]   @relation("JobClient")
}

model Agency {
  id        Int      @id @default(autoincrement())
  name      String
  license   String?
  ownerId   Int      @unique
  owner     User     @relation(fields: [ownerId], references: [id])
  jobs      Job[]    @relation("JobAgency")
  createdAt DateTime @default(now())
}

model Job {
  id        Int       @id @default(autoincrement())
  title     String
  detail    String
  budget    Int
  status    JobStatus @default(PENDING)
  createdAt DateTime  @default(now())

  clientId Int
  client   User @relation("JobClient", fields: [clientId], references: [id])

  agencyId Int?
  agency   Agency? @relation("JobAgency", fields: [agencyId], references: [id])
}
